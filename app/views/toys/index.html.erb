<h1>Listing Toys</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>

<% @toys.each do |toy|%>
  <tr>
    <td><%= toy.name %></td>
    <td><%= toy.description %></td>
    <td><%= link_to 'Show', toy_path(toy)%></td>
    <td><%= link_to 'Edit', edit_toy_path(toy)%></td>
    <td><%= link_to 'Destroy', toy_path(toy),
            method: :delete,
            data: { confirm: 'Are you sure?'} %></td>
  </tr>
<% end %>
</table>

<br>

<%=  link_to 'Add a New Toy', new_toy_path %>
